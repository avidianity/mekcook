{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"typeRoots": ["./src/types", "./node_modules/@types"],
		"baseUrl": "./src",
		"resolveJsonModule": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src", "tests"]
}
