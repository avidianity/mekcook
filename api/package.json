		"mysql2": "^3.14.1",
		"ulid": "^3.0.1",
		"yup": "^1.6.1"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.9",
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.15.30",
		"concurrently": "^9.1.2",
		"drizzle-kit": "^0.31.1",
		"esbuild": "^0.25.5",
		"pino-pretty": "^13.0.0",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3"
